---
layout: layouts/base.liquid
title: Post
pagination:
  data: posts
  size: 1
  alias: post
permalink: '/blog/{{ post.slug }}/'
---
<article class='post container'>
  <h1 class='post__title'>{{ post.title }}</h1>

  <p class='post__meta'><strong>Author:</strong> {{ post.authorName }}</p>

  {% if post.categoryTitles and post.categoryTitles.size %}
    <p class='post__meta'><strong>Categories:</strong> {{ post.categoryTitles | join: ', ' }}</p>
  {% endif %}

  <div class='post__content'>{{ post.body | portableText }}</div>
</article>
